    <Button
        android:id="@+id/btn_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文本保存"
        />
    <Button
        android:id="@+id/sharedpreferences"
        android:layout_width="match_parent"
